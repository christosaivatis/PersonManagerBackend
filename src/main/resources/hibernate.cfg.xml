<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <!-- Mit "update" wird die Tabelle in der Datenbank automatisch generiert bzw. geupdated. -->
        <property name="hibernate.hbm2ddl.auto">update</property>

        <property name="org.hibernate.dialect.MySQLDialect"/>

        <property name="hibernate.connection.url">jdbc:mysql://localhost/test2</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password"/>
    </session-factory>
</hibernate-configuration>
